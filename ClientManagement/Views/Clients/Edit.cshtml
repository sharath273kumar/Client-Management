@using ClientManagement.Models

@model ClientManagement.Models.Client
@{
    ViewBag.Title = "Edit";
}

<link href="@Url.Content("~/Content/edit_style.css")" rel="stylesheet" type="text/css" />
<header ><h4 id ="head">Edit</h4></header>
@using (Html.BeginForm("FormEdit", "Clients", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table cellpadding="0" cellspacing="0">
                <tr>
            <th colspan="2" align="center">Details</th>
                </tr>
            <tr>
                <td><br />Id: </td>
                <td>
                   <br /> @Html.TextBoxFor(x => x.id)
                </td>
            </tr>
            <tr>
                <td><br />Name: </td>
                <td>
                    <br />@Html.TextBoxFor(x => x.name)
                </td>
            </tr>
            <tr>
                <td><br />Company: </td>
                <td>
                    <br />@Html.TextBoxFor(x => x.company)
                </td>
            </tr>
            <tr>
                <td><br />Email: </td>
                <td>
                   <br /> @Html.TextBoxFor(x => x.email)
                </td>
            </tr>
            <tr>
                <td><br />DOB: </td>
                <td>
                    <br />@Html.TextBoxFor(x => x.dob)
                </td>
            </tr>
            <tr>
                <td><br />Gender: </td>
                <td>
                    @Html.RadioButtonFor(x => x.gender, "Male", true) Male  
                    @Html.RadioButtonFor(x=> x.gender, "Female", false) Female 
                </td>
            </tr>
            <tr>
                <td><br />Designation: </td>
                <td>
                    <br />@Html.TextBoxFor(x => x.designation)
                </td>
            </tr>
            <tr>
                <td><br />Department: </td>
                <td>
                    <br />@Html.TextBoxFor(x => x.department)
                </td>
            </tr>
        <tr>
            <td align="center" class="button_block" colspan="2">
                <br /><br /><input type="submit" value="Save" name="submit"/>     
                <input type="submit" value="Cancel" name="submit"/>
            </td>
        </tr>
        
</table>

}
    